<% content_for(:title, "Créer un foyer") %>

<div class="mx-auto max-w-lg">
  <div class="text-center mb-6 sm:mb-8">
    <h1 class="text-xl sm:text-2xl font-bold text-gray-900">Créer votre foyer</h1>
    <p class="mt-2 text-sm text-gray-500">Première étape pour votre projet immobilier</p>
  </div>

  <div class="bg-white rounded-xl border border-gray-100 shadow-sm p-4 sm:p-6">
    <%= form_with(model: @household, url: household_path, class: "space-y-6") do |f| %>
      <% if @household.errors.any? %>
        <div class="rounded-lg bg-red-50 p-4">
          <ul class="list-disc list-inside text-sm text-red-700">
            <% @household.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= f.label :name, "Nom du foyer", class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :name, placeholder: "Ex: Foyer Dupont-Martin", class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
      </div>

      <div>
        <%= f.submit "Créer le foyer", class: "w-full flex justify-center py-2.5 px-4 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 cursor-pointer" %>
      </div>
    <% end %>
  </div>

  <div class="mt-6 text-center">
    <p class="text-sm text-gray-500">Vous avez un code d'invitation ?</p>
    <%= form_tag join_household_path(token: ""), method: :get, class: "mt-2 flex flex-wrap gap-2" do %>
      <input type="text" name="token" placeholder="Code d'invitation" class="flex-1 min-w-0 rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm">
      <button type="submit" class="rounded-lg bg-gray-100 px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-200 whitespace-nowrap">Rejoindre</button>
    <% end %>
  </div>
</div>
