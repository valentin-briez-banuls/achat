<tr class="hover:bg-gray-50">
  <td class="py-2 pr-4">
    <span class="text-sm font-medium text-gray-900"><%= item.category_label %></span>
    <% if item.energy_upgrade? %>
      <span class="ml-1.5 inline-flex items-center rounded-full bg-green-50 px-1.5 py-0.5 text-xs font-medium text-green-700">DPE</span>
    <% end %>
    <% if item.description.present? %>
      <p class="text-xs text-gray-500 mt-0.5"><%= item.description %></p>
    <% end %>
  </td>
  <td class="py-2 text-right text-sm text-gray-700 whitespace-nowrap">
    <%= currency(item.estimated_cost_min) %> â€“ <%= currency(item.estimated_cost_max) %>
  </td>
  <td class="py-2 pl-4 text-right whitespace-nowrap">
    <%= link_to "Modifier", edit_property_renovation_item_path(property, item), class: "text-xs text-blue-600 hover:underline mr-2" %>
    <%= link_to "Supprimer", property_renovation_item_path(property, item),
        data: { turbo_method: :delete, turbo_confirm: "Supprimer ce poste ?" },
        class: "text-xs text-red-600 hover:underline" %>
  </td>
</tr>
