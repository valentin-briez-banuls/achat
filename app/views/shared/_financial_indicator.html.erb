<div class="bg-white overflow-hidden shadow-sm rounded-xl border border-gray-100">
  <div class="p-4 sm:p-5">
    <div class="flex items-start">
      <div class="flex-shrink-0">
        <div class="w-9 h-9 sm:w-10 sm:h-10 rounded-lg bg-<%= color %>-50 flex items-center justify-center">
          <svg class="w-5 h-5 text-<%= color %>-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="<%= icon_path %>"/>
          </svg>
        </div>
      </div>
      <div class="ml-3 flex-1 min-w-0">
        <p class="text-xs sm:text-sm font-medium text-gray-500 truncate"><%= label %></p>
        <p class="text-lg sm:text-2xl font-bold text-gray-900 tabular-nums leading-tight truncate"><%= value %></p>
      </div>
    </div>
    <% if defined?(subtitle) && subtitle %>
      <p class="mt-2 text-xs text-gray-500 leading-relaxed"><%= subtitle %></p>
    <% end %>
  </div>
</div>
