<% flash.each do |type, message| %>
  <% css = case type
           when "notice" then "bg-green-50 text-green-800 border-green-200"
           when "alert" then "bg-red-50 text-red-800 border-red-200"
           else "bg-blue-50 text-blue-800 border-blue-200"
           end %>
  <div class="mb-4 p-4 rounded-lg border <%= css %>" data-controller="dismissable">
    <div class="flex items-center justify-between">
      <p class="text-sm font-medium"><%= message %></p>
      <button data-action="click->dismissable#dismiss" class="ml-4 text-current opacity-50 hover:opacity-100">
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"/>
        </svg>
      </button>
    </div>
  </div>
<% end %>
