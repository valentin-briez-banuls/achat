<% content_for(:title, "Faire une offre") %>
<div class="max-w-lg mx-auto">
  <h1 class="text-2xl font-bold text-gray-900 mb-2">Faire une offre</h1>
  <p class="text-sm text-gray-500 mb-6"><%= @property.title %> — Prix affiché : <%= currency(@property.price) %></p>
  <div class="bg-white rounded-xl border border-gray-100 shadow-sm p-6">
    <%= render "form", offer: @offer, property: @property %>
  </div>
</div>
