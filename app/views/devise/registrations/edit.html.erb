<div class="max-w-2xl mx-auto">
  <!-- En-tête -->
  <div class="mb-8">
    <h2 class="text-3xl font-bold text-gray-900">
      Modifier mon profil
    </h2>
    <p class="mt-1 text-sm text-gray-600">
      Mettez à jour vos informations personnelles et votre mot de passe
    </p>
  </div>

  <!-- Formulaire -->
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-6" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <!-- Carte Informations personnelles -->
    <div class="bg-white shadow rounded-lg p-6">
      <h3 class="text-lg font-semibold text-gray-900 mb-4">Informations personnelles</h3>

      <div class="space-y-4">
        <!-- Prénom et Nom -->
        <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
          <div>
            <%= f.label :first_name, "Prénom", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_field :first_name,
                autocomplete: "given-name",
                class: "appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-400 text-gray-900 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
          </div>

          <div>
            <%= f.label :last_name, "Nom", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_field :last_name,
                autocomplete: "family-name",
                class: "appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-400 text-gray-900 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
          </div>
        </div>

        <!-- Email -->
        <div>
          <%= f.label :email, "Adresse email", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.email_field :email,
              autofocus: true,
              autocomplete: "email",
              class: "appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-400 text-gray-900 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div class="rounded-lg bg-yellow-50 border border-yellow-200 p-4">
            <p class="text-sm text-yellow-800">
              En attente de confirmation pour : <span class="font-medium"><%= resource.unconfirmed_email %></span>
            </p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Carte Changer le mot de passe -->
    <div class="bg-white shadow rounded-lg p-6">
      <h3 class="text-lg font-semibold text-gray-900 mb-2">Changer le mot de passe</h3>
      <p class="text-sm text-gray-600 mb-4">Laissez les champs vides si vous ne souhaitez pas changer votre mot de passe</p>

      <div class="space-y-4">
        <!-- Nouveau mot de passe -->
        <div>
          <%= f.label :password, "Nouveau mot de passe", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <% if @minimum_password_length %>
            <p class="text-xs text-gray-500 mb-1">
              (<%= @minimum_password_length %> caractères minimum)
            </p>
          <% end %>
          <%= f.password_field :password,
              autocomplete: "new-password",
              placeholder: "••••••••",
              class: "appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-400 text-gray-900 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
        </div>

        <!-- Confirmation du nouveau mot de passe -->
        <div>
          <%= f.label :password_confirmation, "Confirmer le nouveau mot de passe", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.password_field :password_confirmation,
              autocomplete: "new-password",
              placeholder: "••••••••",
              class: "appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-400 text-gray-900 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
        </div>

        <!-- Mot de passe actuel -->
        <div>
          <%= f.label :current_password, "Mot de passe actuel", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <p class="text-xs text-gray-500 mb-1">
            Nous avons besoin de votre mot de passe actuel pour confirmer les modifications
          </p>
          <%= f.password_field :current_password,
              autocomplete: "current-password",
              placeholder: "••••••••",
              class: "appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-400 text-gray-900 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
        </div>
      </div>
    </div>

    <!-- Boutons d'action -->
    <div class="flex items-center justify-between">
      <%= f.submit "Enregistrer les modifications", class: "inline-flex justify-center py-2 px-4 border border-transparent text-sm font-semibold rounded-lg text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors" %>

      <%= link_to "Retour", :back, class: "text-sm font-medium text-gray-600 hover:text-gray-900" %>
    </div>
  <% end %>

  <!-- Zone de danger -->
  <div class="mt-8 bg-red-50 border border-red-200 rounded-lg p-6">
    <h3 class="text-lg font-semibold text-red-900 mb-2">Zone de danger</h3>
    <p class="text-sm text-red-700 mb-4">
      Une fois votre compte supprimé, toutes vos données seront définitivement effacées.
    </p>
    <%= button_to "Supprimer mon compte",
        registration_path(resource_name),
        data: {
          confirm: "Êtes-vous sûr de vouloir supprimer votre compte ? Cette action est irréversible.",
          turbo_confirm: "Êtes-vous sûr de vouloir supprimer votre compte ? Cette action est irréversible."
        },
        method: :delete,
        class: "inline-flex justify-center py-2 px-4 border border-transparent text-sm font-semibold rounded-lg text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-colors" %>
  </div>
</div>
