<% prop = property.decorate %>
<div class="bg-white rounded-xl border border-gray-100 shadow-sm overflow-hidden hover:shadow-md transition-shadow">
  <!-- Photo -->
  <div class="aspect-[16/10] bg-gray-100 relative">
    <% if property.photos.attached? %>
      <%= image_tag property.photos.first.variant(resize_to_fill: [400, 250]), class: "w-full h-full object-cover" %>
    <% elsif property.parsed_image_urls.any? %>
      <%= image_tag property.parsed_image_urls.first, class: "w-full h-full object-cover", onerror: "this.src='data:image/svg+xml,%3Csvg xmlns=\'http://www.w3.org/2000/svg\' fill=\'%23d1d5db\' viewBox=\'0 0 24 24\'%3E%3Cpath d=\'M2.25 15.75l5.159-5.159a2.25 2.25 0 013.182 0l5.159 5.159m-1.5-1.5l1.409-1.409a2.25 2.25 0 013.182 0l2.909 2.909M3.75 21h16.5a2.25 2.25 0 002.25-2.25V5.25a2.25 2.25 0 00-2.25-2.25H3.75A2.25 2.25 0 001.5 5.25v13.5A2.25 2.25 0 003.75 21z\'/%3E%3C/svg%3E'" %>
    <% else %>
      <div class="w-full h-full flex items-center justify-center text-gray-300">
        <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M2.25 15.75l5.159-5.159a2.25 2.25 0 013.182 0l5.159 5.159m-1.5-1.5l1.409-1.409a2.25 2.25 0 013.182 0l2.909 2.909M3.75 21h16.5a2.25 2.25 0 002.25-2.25V5.25a2.25 2.25 0 00-2.25-2.25H3.75A2.25 2.25 0 001.5 5.25v13.5A2.25 2.25 0 003.75 21z"/></svg>
      </div>
    <% end %>
    <div class="absolute top-2 left-2 flex gap-1.5">
      <%= prop.status_badge %>
      <%= prop.energy_badge %>
    </div>
    <div class="absolute top-2 right-2">
      <label class="flex items-center">
        <input type="checkbox" name="property_ids[]" value="<%= property.id %>" form="compare-form" class="rounded border-gray-300 text-blue-600 focus:ring-blue-500">
      </label>
    </div>
  </div>

  <!-- Content -->
  <div class="p-3 sm:p-4">
    <div class="flex items-start justify-between gap-2">
      <div class="min-w-0">
        <%= link_to prop.title, property, class: "text-sm font-semibold text-gray-900 hover:text-blue-600 truncate block min-h-[44px] flex items-center" %>
        <p class="text-xs text-gray-500 mt-0.5"><%= prop.location %></p>
      </div>
      <%= prop.score_badge %>
    </div>

    <div class="mt-3 flex items-baseline justify-between">
      <span class="text-base sm:text-lg font-bold text-gray-900 tabular-nums"><%= prop.formatted_price %></span>
      <span class="text-xs text-gray-500"><%= prop.formatted_price_per_sqm %></span>
    </div>
    <% if property.price_dropped? %>
      <div class="mt-1">
        <span class="inline-flex items-center gap-0.5 text-xs font-medium text-amber-700">
          ↓ -<%= property.price_drop_percentage %>% depuis la mise en ligne
        </span>
      </div>
    <% end %>
    <% if property.renovation_items.loaded? ? property.renovation_items.any? : property.renovation_items.exists? %>
      <div class="mt-1">
        <span class="inline-flex items-center gap-1 text-xs text-orange-700">
          <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.42 15.17L17.25 21A2.652 2.652 0 0021 17.25l-5.877-5.877M11.42 15.17l2.496-3.03c.317-.384.74-.626 1.208-.766M11.42 15.17l-4.655 5.653a2.548 2.548 0 11-3.586-3.586l6.837-1.628m5.108-.233c.55-.164 1.163-.188 1.743-.14a4.5 4.5 0 004.486-6.336l-3.276 3.277a3.004 3.004 0 01-2.25-2.25l3.276-3.276a4.5 4.5 0 00-6.336 4.486c.091 1.076-.071 2.264-.904 2.95l-.102.085m-1.745 1.437L5.909 7.5H4.5L2.25 3.75l1.5-1.5L7.5 4.5v1.409l4.26 4.26m-1.745 1.437l1.745-1.437m6.615 8.206L15.75 15.75M4.867 19.125h.008v.008h-.008v-.008z"/></svg>
          Travaux : <%= number_to_currency(property.renovation_cost_min, unit: "€", format: "%n %u") %> – <%= number_to_currency(property.renovation_cost_max, unit: "€", format: "%n %u") %>
        </span>
      </div>
    <% end %>

    <div class="mt-2 flex flex-wrap items-center gap-x-2 gap-y-1 text-xs text-gray-500">
      <span><%= prop.formatted_surface %></span>
      <% if property.bedrooms %><span>&middot; <%= property.bedrooms %> ch.</span><% end %>
      <span>&middot; <%= prop.type_label %></span>
      <span class="hidden sm:inline">&middot; <%= prop.condition_label %></span>
    </div>
  </div>
</div>
