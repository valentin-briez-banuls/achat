<% prop = property.decorate %>
<div class="bg-white rounded-xl border border-gray-100 shadow-sm overflow-hidden hover:shadow-md transition-shadow">
  <!-- Photo -->
  <div class="aspect-[16/10] bg-gray-100 relative">
    <% if property.photos.attached? %>
      <%= image_tag property.photos.first.variant(resize_to_fill: [400, 250]), class: "w-full h-full object-cover" %>
    <% else %>
      <div class="w-full h-full flex items-center justify-center text-gray-300">
        <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M2.25 15.75l5.159-5.159a2.25 2.25 0 013.182 0l5.159 5.159m-1.5-1.5l1.409-1.409a2.25 2.25 0 013.182 0l2.909 2.909M3.75 21h16.5a2.25 2.25 0 002.25-2.25V5.25a2.25 2.25 0 00-2.25-2.25H3.75A2.25 2.25 0 001.5 5.25v13.5A2.25 2.25 0 003.75 21z"/></svg>
      </div>
    <% end %>
    <div class="absolute top-2 left-2 flex gap-1.5">
      <%= prop.status_badge %>
      <%= prop.energy_badge %>
    </div>
    <div class="absolute top-2 right-2">
      <label class="flex items-center">
        <input type="checkbox" name="property_ids[]" value="<%= property.id %>" form="compare-form" class="rounded border-gray-300 text-blue-600 focus:ring-blue-500">
      </label>
    </div>
  </div>

  <!-- Content -->
  <div class="p-4">
    <div class="flex items-start justify-between gap-2">
      <div class="min-w-0">
        <%= link_to prop.title, property, class: "text-sm font-semibold text-gray-900 hover:text-blue-600 truncate block" %>
        <p class="text-xs text-gray-500 mt-0.5"><%= prop.location %></p>
      </div>
      <%= prop.score_badge %>
    </div>

    <div class="mt-3 flex items-baseline justify-between">
      <span class="text-lg font-bold text-gray-900"><%= prop.formatted_price %></span>
      <span class="text-xs text-gray-500"><%= prop.formatted_price_per_sqm %></span>
    </div>

    <div class="mt-3 flex items-center gap-3 text-xs text-gray-500">
      <span><%= prop.formatted_surface %></span>
      <% if property.bedrooms %><span>&middot; <%= property.bedrooms %> ch.</span><% end %>
      <span>&middot; <%= prop.type_label %></span>
      <span>&middot; <%= prop.condition_label %></span>
    </div>
  </div>
</div>
