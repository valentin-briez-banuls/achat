<%= form_with(model: [property, simulation], class: "space-y-6", data: { controller: "simulation-slider" }) do |f| %>
  <% if simulation.errors.any? %>
    <div class="rounded-lg bg-red-50 p-4">
      <ul class="list-disc list-inside text-sm text-red-700">
        <% simulation.errors.full_messages.each do |msg| %><li><%= msg %></li><% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :name, "Nom de la simulation", class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :name, placeholder: "Ex: Scénario optimiste", class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
  </div>

  <div>
    <%= f.label :scenario, "Scénario", class: "block text-sm font-medium text-gray-700" %>
    <%= f.select :scenario, [["Standard", "standard"], ["Optimiste", "optimiste"], ["Pessimiste", "pessimiste"]], {}, class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
  </div>

  <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
    <div>
      <%= f.label :loan_rate, "Taux d'intérêt (%)", class: "block text-sm font-medium text-gray-700" %>
      <%= f.number_field :loan_rate, step: 0.01, min: 0.1, max: 10, class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm",
          data: { simulation_slider_target: "rate", action: "input->simulation-slider#calculate" } %>
    </div>
    <div>
      <%= f.label :loan_duration_years, "Durée (années)", class: "block text-sm font-medium text-gray-700" %>
      <%= f.select :loan_duration_years, [[10, 10], [15, 15], [20, 20], [25, 25], [30, 30]], {},
          class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm",
          data: { simulation_slider_target: "duration", action: "change->simulation-slider#calculate" } %>
    </div>
    <div>
      <%= f.label :personal_contribution, "Apport personnel (€)", class: "block text-sm font-medium text-gray-700" %>
      <%= f.number_field :personal_contribution, step: 1000, min: 0, class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm",
          data: { simulation_slider_target: "contribution", action: "input->simulation-slider#calculate" } %>
    </div>
    <div>
      <%= f.label :negotiated_price, "Prix négocié (€)", class: "block text-sm font-medium text-gray-700" %>
      <%= f.number_field :negotiated_price, step: 1000, min: 0, class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm",
          data: { simulation_slider_target: "price", action: "input->simulation-slider#calculate" } %>
    </div>
    <div>
      <%= f.label :additional_works, "Travaux supplémentaires (€)", class: "block text-sm font-medium text-gray-700" %>
      <%= f.number_field :additional_works, step: 500, min: 0, class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
    </div>
    <div>
      <%= f.label :price_negotiation_percent, "Négociation prix (%)", class: "block text-sm font-medium text-gray-700" %>
      <div class="mt-1 flex items-center gap-2">
        <%= f.range_field :price_negotiation_percent, min: 0, max: 20, step: 1, class: "flex-1",
            data: { simulation_slider_target: "negotiation", action: "input->simulation-slider#updateNegotiation" } %>
        <span class="text-sm font-medium text-gray-700 w-12 text-right" data-simulation-slider-target="negotiationDisplay">
          <%= simulation.price_negotiation_percent || 0 %>%
        </span>
      </div>
    </div>
  </div>

  <!-- Renovation budget toggle -->
  <% if property.renovation_items.any? %>
    <div class="rounded-lg bg-amber-50 border border-amber-200 p-4"
         data-controller="renovation">
      <div class="flex items-start gap-3">
        <div class="flex-1">
          <p class="text-sm font-medium text-amber-900">Budget travaux estimé</p>
          <p class="text-xs text-amber-700 mt-0.5">
            Fourchette : <%= number_to_currency(property.renovation_cost_min, unit: "€", format: "%n %u") %> – <%= number_to_currency(property.renovation_cost_max, unit: "€", format: "%n %u") %>
          </p>
          <div class="mt-3 flex items-center gap-2">
            <%= f.check_box :renovation_budget_included,
                class: "rounded border-amber-400 text-amber-600 focus:ring-amber-500",
                data: { renovation_target: "renovationBudgetIncluded", action: "change->renovation#toggleBudgetField" } %>
            <%= f.label :renovation_budget_included, "Inclure le budget travaux dans le crédit",
                class: "text-sm font-medium text-amber-900" %>
          </div>
          <div class="mt-3 <%= simulation.renovation_budget_included? ? '' : 'hidden' %>"
               data-renovation-target="renovationBudgetField">
            <%= f.label :renovation_budget, "Montant à inclure (€)", class: "block text-xs font-medium text-amber-900 mb-1" %>
            <%= f.select :renovation_budget,
                [
                  ["Estimation basse — #{number_to_currency(property.renovation_cost_min, unit: '€', format: '%n %u')}", property.renovation_cost_min],
                  ["Estimation haute — #{number_to_currency(property.renovation_cost_max, unit: '€', format: '%n %u')}", property.renovation_cost_max]
                ],
                { selected: simulation.renovation_budget || property.renovation_cost_min },
                class: "block w-full rounded-lg border-amber-300 shadow-sm focus:border-amber-500 focus:ring-amber-500 sm:text-sm" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Live Estimate -->
  <div class="rounded-lg bg-blue-50 border border-blue-200 p-4" data-simulation-slider-target="estimate">
    <p class="text-sm text-blue-700">Les résultats seront calculés après enregistrement.</p>
  </div>

  <div class="pt-2">
    <%= f.submit simulation.new_record? ? "Lancer la simulation" : "Recalculer", class: "w-full py-2.5 px-4 rounded-lg text-sm font-medium text-white bg-blue-600 hover:bg-blue-500 cursor-pointer" %>
  </div>
<% end %>
