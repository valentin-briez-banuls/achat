<%= form_with(model: [property, visit], class: "space-y-4") do |f| %>
  <% if visit.errors.any? %>
    <div class="rounded-lg bg-red-50 p-4">
      <ul class="list-disc list-inside text-sm text-red-700">
        <% visit.errors.full_messages.each do |msg| %><li><%= msg %></li><% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :scheduled_at, "Date et heure", class: "block text-sm font-medium text-gray-700" %>
    <%= f.datetime_local_field :scheduled_at, class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
  </div>
  <div>
    <%= f.label :status, "Statut", class: "block text-sm font-medium text-gray-700" %>
    <%= f.select :status, [["Planifiée", "planifiee"], ["Effectuée", "effectuee"], ["Annulée", "annulee"]], {}, class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
  </div>
  <div>
    <%= f.label :verdict, "Verdict", class: "block text-sm font-medium text-gray-700" %>
    <%= f.select :verdict, [["— Pas encore", nil], ["Négatif", "negatif"], ["Neutre", "neutre"], ["Positif", "positif"], ["Coup de coeur", "coup_de_coeur"]], {}, class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
  </div>
  <div>
    <%= f.label :pros, "Points positifs", class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_area :pros, rows: 2, class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
  </div>
  <div>
    <%= f.label :cons, "Points négatifs", class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_area :cons, rows: 2, class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
  </div>
  <div>
    <%= f.label :notes, "Notes", class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_area :notes, rows: 3, class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
  </div>
  <div class="pt-2">
    <%= f.submit visit.new_record? ? "Planifier" : "Mettre à jour", class: "w-full py-2.5 px-4 rounded-lg text-sm font-medium text-white bg-blue-600 hover:bg-blue-500 cursor-pointer" %>
  </div>
<% end %>
